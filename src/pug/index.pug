doctype html
html(lang="ru")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Главная
  body 
    header.header
      .header__top-line.top-line
        .container
          .top-line__inner
            .top-line__logo.logo
              img.logo__img(src="../images/logo/logo.png", alt="")
              .logo__text
                .logo__title Красноярск
                .logo__subtitle Администрация города
            .top-line__btn-group
              .top-line__search
                input(type="text",placeholder="Поиск по сайту ...").top-line__search-input
                i.top-line__search-icon.bi.bi-search
              .top-line__btn РУ
              .top-line__btn
                i.top-line__glasses-icon.ph-sunglasses
              .top-line__burger.top-line__btn.burger
                i.top-line__burger-icon.bi.bi-list
            .burger__wrapper
              .burger__closeBtn
                i.burger__closeBtn-icon.bi.bi-x
              .burger__content
                ul.burger__menu
                .burger__features
      nav.header__nav.nav
        .container
          .nav__inner
            ul.nav__menu
              li.nav__menu-item.nav__menu-item_active
                a.nav__menu-link(href="#") Главная
              li.nav__menu-item
                a.nav__menu-link(href="#") О городе
              li.nav__menu-item
                a.nav__menu-link(href="#") Новости
              li.nav__menu-item
                a.nav__menu-link(href="#") Онлайн-приемная обращений
              li.nav__menu-item
                a.nav__menu-link(href="#") Советник
              li.nav__menu-item
                a.nav__menu-link(href="#") Вакцинация
    .wrapper
      main.main
        section.banner
          .banner__slider
            img.banner__item(src="images/content/banner-1.png", alt="")
            img.banner__item(src="images/content/banner-1.png", alt="")
            img.banner__item(src="images/content/banner-1.png", alt="")
          .banner__arrows
        .news-banner
          .container
            .news-banner__inner
              .news-banner__slider
                .news-banner__slider-item
                  img.news-banner__item-img(src="images/content/news-1.png", alt="")
                  a(href="#").news-banner__text
                    p.news-banner__slider-desc Подпись к фото, возможно новости
                    span.news-banner__slider-date 24.01.2022
                .news-banner__slider-item
